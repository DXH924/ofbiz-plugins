<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>UserDemo Services</description>
    <vendor></vendor>
    <version>1.0</version>

<!--    使用默认引擎  -->
    <service name="createUserDemo" default-entity-name="UserDemo" engine="entity-auto" invoke="create" auth="true" >
        <description>Create a UserDemo Record In Database</description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>

<!--    使用java引擎，自定义服务  -->
    <service name="createUserDemoByJavaService" default-entity-name="UserDemo" engine="java" location="cn.edu.xidian.cs1301.userdemo.services.UserDemoServices" invoke="createUserDemo" auth="true" export="true" action="POST">
        <description>Create a User Demo using a service in Java</description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
        <override name="comments" optional="true"/>
    </service>
    
</services>